# Environment Configuration
# Copy this to .env.local and customize for your environment

# API Gateway URL (leave empty to use relative /api paths)
# For local development with microservices running:
# VITE_API_GATEWAY_URL=http://localhost:3000/api
VITE_API_GATEWAY_URL=

# Force mock data mode (true/false)
# Set to 'false' when connecting to a real backend
VITE_USE_MOCK_DATA=false

# Environment name (development, preview, production)
VITE_APP_ENV=development

# Enable debug logging
VITE_DEBUG=true
